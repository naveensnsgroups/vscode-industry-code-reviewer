{
  "name": "industry-code-reviewer",
  "displayName": "Industry Code Reviewer",
  "description": "Industry-standard static code review without AI or API keys",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/node": "22.x",
    "typescript": "^5.9.3"
  }
}
